  <section id="contact" class="contact mt-10">

    <div class="container m-auto p-12">
      <h2 class="text-3xl text-gray-700 font-extrabold text-center mb-4"><%= I18n.t('contact.title') %></h2>
      <hr class="border border-gray-700 w-12 m-auto mb-6">
      <p class="text-center text-gray-700"><%= I18n.t('contact.message') %></p>

      <div class="form mt-10">

        <form name="contact" class="w-full max-w-lg m-auto" netlify>
          <div class="flex flex-wrap -mx-3 mb-3">
            <div class="w-full md:w-1/2 px-3 md:mb-0">
              <input class="appearance-none block w-full bg-white text-sm text-gray-700 rounded-lg py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" id="grid-first-name" type="text" name="first name" placeholder="<%= I18n.t('contact.firstname') %>">
            </div>
            <div class="w-full md:w-1/2 px-3">
              <input class="appearance-none block w-full bg-white text-sm text-gray-700 rounded-lg py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-last-name" type="text" name="last name" placeholder="<%= I18n.t('contact.surname') %>">
            </div>
          </div>
          <div class="flex flex-wrap -mx-3 mb-2">
            <div class="w-full px-3">
              <input class="appearance-none block w-full bg-white text-sm text-gray-700 rounded-lg py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-email" type="email" name="email" placeholder="<%= I18n.t('contact.email') %>">
            </div>
          </div>
          <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3">
              <textarea class="appearance-none block w-full bg-white text-sm text-gray-700 rounded-lg py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" name="message" placeholder="<%= I18n.t('contact.inquiry') %>" rows="10" cols="30"></textarea>
            </div>
          </div>
          <div class="flex flex-wrap -mx-3 mb-2">
            <div class="w-full px-3 text-center">
              <button class="text-sm bg-orange-500 hover:bg-orange-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-6 rounded" type="submit">
                <%= I18n.t('contact.send') %>
              </button>
            </div>
          </div>
        </form>
      </div>

    </div>

  </section>